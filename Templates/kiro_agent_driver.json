{
  "name": "{agent-name}",
  "description": "{Brief description of what this agent does}",
  "prompt": "file://../../open-agents/agents/{agent-name}.md",
  "tools": [
    "read",
    "write", 
    "shell",
    "@git",
    "@fetch/fetch_url"
  ],
  "allowedTools": [
    "read",
    "knowledge",
    "@server/specific_tool",
    "r*",
    "w*",
    "@builtin",
    "@server/api_*",
    "@server/read_*",
    "@git-server/get_*_info",
    "@*/status",
    "@fetch",
    "@git-*"
  ],
  "resources": [
    "skill://../../open-agents/agents/*.md",
    "skill://../../skills/**/SKILL.md"
  ],
  "keyboardShortcut": "ctrl+{key}",
  "welcomeMessage": "Ready to help with {agent purpose}!"
}
